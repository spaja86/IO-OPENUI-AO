{
  "version": 2,
  "outputDirectory": "public",
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/health.ts": { "maxDuration": 10 },
    "api/realtime/ephemeral.ts": { "maxDuration": 30 },
    "api/chat/stream.ts": { "maxDuration": 60 }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/realtime", "destination": "/realtime/index.html" },
    { "source": "/realtime/(.*)", "destination": "/realtime/index.html" },
    { "source": "/chat", "destination": "/chat/index.html" },
    { "source": "/chat/(.*)", "destination": "/chat/index.html" }
  ]
}
